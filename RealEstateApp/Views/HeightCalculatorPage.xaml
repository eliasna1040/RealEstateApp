<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.Views.HeightCalculatorPage" xmlns:vm="clr-namespace:RealEstateApp.ViewModels"
             x:DataType="vm:HeightCalculatorPageViewModel"
             xmlns:models="clr-namespace:RealEstateApp.Models"
             xmlns:converters="clr-namespace:RealEstateApp.Converters">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="{Binding CurrentAltitude, StringFormat='Current altitude {0:F2}'}" />
            <Entry Text="{Binding MeasurementLabel}" />
            <Button Text="Save" Command="{Binding SaveMeasurementCommand}" />
            <CollectionView ItemsSource="{Binding MeasurementCollection}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:BarometerMeasurement">
                        <HorizontalStackLayout>
                            <Label Text="{Binding Display}" />
                            <Label TextColor="LightGray" Text="{Binding HeightChange, Converter={converters:EmptyDoubleConverter}}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>