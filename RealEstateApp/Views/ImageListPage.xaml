<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:RealEstateApp.Models"
             xmlns:vm="clr-namespace:RealEstateApp.ViewModels"
             x:Class="RealEstateApp.Views.ImageListPage" x:DataType="vm:ImageListPageViewModel">
    <ContentPage.Content>
        <CarouselView ItemsSource="{Binding ImageUrlCollection}" Position="{Binding Position}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding .}"/>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </ContentPage.Content>
</ContentPage>